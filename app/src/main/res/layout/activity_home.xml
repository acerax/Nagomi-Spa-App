<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/spa_background"
    android:fillViewport="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Top Navigation Icons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- Notification Icon (Upper Left) -->
            <ImageButton
                android:id="@+id/notificationIconBtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/circle_button_background"
                android:src="@drawable/ic_notification"
                android:contentDescription="Notifications"
                android:scaleType="centerInside"
                android:padding="10dp"
                android:elevation="4dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Profile Icon (Upper Right) -->
            <ImageButton
                android:id="@+id/profileIconBtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/circle_button_background"
                android:src="@drawable/ic_profile"
                android:contentDescription="Profile"
                android:scaleType="centerInside"
                android:padding="8dp"
                android:elevation="4dp" />

        </LinearLayout>

        <!-- Main Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal"
            android:layout_marginTop="64dp">

            <!-- Logo Section -->
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:contentDescription="Nagomi Spa Logo"
                app:srcCompat="@drawable/aaaaaaa" />

            <TextView
                android:id="@+id/spaTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:fontFamily="cursive"
                android:text="Nagomi Spa"
                android:textAlignment="center"
                android:textColor="#6F4040"
                android:textSize="36sp"
                android:textStyle="bold"
                android:elevation="2dp"
                android:shadowColor="#80000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4" />

            <!-- Profile Card with Action Buttons -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#80FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="Welcome back, Admin!"
                        android:textAlignment="center"
                        android:textColor="#3E2723"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Wishing you a productive and stress-free day managing Nagomi Spa."
                        android:textAlignment="center"
                        android:textColor="#5D4037"
                        android:textSize="14sp"
                        android:textStyle="italic"
                        android:layout_marginBottom="20dp" />

                    <!-- Action Buttons Inside Card -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <Button
                            android:id="@+id/staffScheduleBtn"
                            android:layout_width="311dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="6dp"
                            android:layout_weight="1"
                            android:backgroundTint="#8E3B3B"
                            android:gravity="center"
                            android:text="Staff\nSchedule"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:cornerRadius="12dp" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Staff Schedule Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#80FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Staff Schedule"
                        android:textAlignment="center"
                        android:textColor="#3E2723"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- Staff Member 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:background="#F5F5F5"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Maria Santos"
                            android:textColor="#3E2723"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="● Active"
                            android:textColor="#4CAF50"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:background="@android:color/transparent" />
                    </LinearLayout>

                    <!-- Staff Member 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:background="#F5F5F5"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Ana Reyes"
                            android:textColor="#3E2723"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="● Active"
                            android:textColor="#4CAF50"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp" />
                    </LinearLayout>

                    <!-- Staff Member 3 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:background="#F5F5F5"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Carmen Lopez"
                            android:textColor="#3E2723"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="● Inactive"
                            android:textColor="#F44336"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp" />
                    </LinearLayout>

                    <!-- Staff Member 4 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:background="#F5F5F5"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Sofia Garcia"
                            android:textColor="#3E2723"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="● Active"
                            android:textColor="#4CAF50"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp" />
                    </LinearLayout>

                    <!-- Staff Member 5 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:background="#F5F5F5"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Isabella Cruz"
                            android:textColor="#3E2723"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="● Inactive"
                            android:textColor="#F44336"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </FrameLayout>
</ScrollView>