<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/spa_background"
    tools:context=".staff_sched">

    <!-- Dim Overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#33000000" />

    <!-- HEADER -->
    <LinearLayout
        android:id="@+id/headerSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/pageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Staff Scheduler"
            android:textColor="#1A0F0A"
            android:textSize="32sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/pageSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manage staff schedules and clients"
            android:textColor="#3E2723"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <View
            android:layout_width="50dp"
            android:layout_height="3dp"
            android:layout_marginTop="12dp"
            android:background="#8E3B3B"/>
    </LinearLayout>

    <!-- DATE NAVIGATION -->
    <LinearLayout
        android:id="@+id/dateNavigationBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:elevation="6dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/headerSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/previousWeekButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_media_previous"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="#6D4C41" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/currentWeekText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nov 7 - Nov 13, 2025"
                android:textColor="#1A0F0A"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/currentYearText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Week 45"
                android:textColor="#6D4C41"
                android:textSize="13sp" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/nextWeekButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_media_next"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="#6D4C41" />

    </LinearLayout>

    <!-- BUTTONS -->
    <LinearLayout
        android:id="@+id/actionButtonsRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/dateNavigationBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/addStaffButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Add Staff"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="15sp"
            app:backgroundTint="#6D4C41"
            app:cornerRadius="24dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/filterButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:text="Filter"
            android:textColor="#6D4C41"
            android:textStyle="bold"
            app:backgroundTint="#F5F5F5"
            app:strokeWidth="1dp"
            app:strokeColor="#6D4C41"
            app:cornerRadius="24dp" />
    </LinearLayout>

    <!-- LIST -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/staffScheduleRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingBottom="16dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/actionButtonsRow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_staff_schedule" />

</androidx.constraintlayout.widget.ConstraintLayout>